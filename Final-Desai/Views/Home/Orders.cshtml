@model List<Final_Desai.Models.UserOrder>
<!-- view that shows information from users who gave order.-->
@if (Model != null && Model.Count > 0)
{
    <table class=" table table-primary">
        <thead>
            <tr>
                <th>Name</th>
                <th>Patty Type</th>
                <th>Patties Amount</th>
                <th>Cheese</th>
                <th>Bacon</th>
                <th>Fries</th>
                <th>Other</th>
                <th>Cost</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Name</td>
                    <td>@order.PattyType</td>
                    <td>@order.TotalPatties</td>
                    <td>@order.Cheese</td>
                    <td>@order.Bacon</td>
                    <td>@order.Fries</td>
                    <td>@order.Other</td>
                    <td>@order.Cost.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else //if no entries in database
{ 
    <p>No registrations to display</p>
}